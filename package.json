{
  "name": "@avavilov/apple-script",
  "version": "0.0.2",
  "description": "Type-safe AppleScript execution library for Node.js with Zod validation",
  "author": "Andrey Vavilov <a@vavilov.dev>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "darwin"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "test": "npm run test:unit && npm run test:integration",
    "test:integration": "tsx --test tests/**/*.test.ts",
    "test:unit": "tsx --test src/**/*.test.ts",
    "typecheck": "tsc --noEmit",
    "prebuild": "npm run clean",
    "prepare": "npm run build",
    "prepublishOnly": "npm run typecheck && npm run build",
    "preversion": "npm run typecheck",
    "postversion": "git push && git push --tags",
    "version:patch": "node ./scripts/version-up.mjs patch",
    "version:minor": "node ./scripts/version-up.mjs minor",
    "version:major": "node ./scripts/version-up.mjs major",
    "version:prerelease": "node ./scripts/version-up.mjs prerelease",
    "release:patch": "npm version patch && npm publish --access public",
    "release:minor": "npm version minor && npm publish --access public",
    "release:major": "npm version major && npm publish --access public",
    "publish:dry": "npm pack --dry-run"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "keywords": [
    "applescript",
    "macos",
    "automation",
    "typescript",
    "zod",
    "validation",
    "osascript",
    "apple-events",
    "browser-automation",
    "type-safe"
  ],
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "zod": ">=4.0.0 <5"
  },
  "dependencies": {
    "zod": "4.1.5"
  },
  "devDependencies": {
    "@types/node": "24.3.0",
    "tsx": "4.20.5",
    "typescript": "5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/harmonyjs/apple-script.git"
  },
  "bugs": {
    "url": "https://github.com/harmonyjs/apple-script/issues"
  },
  "homepage": "https://github.com/harmonyjs/apple-script#readme"
}
